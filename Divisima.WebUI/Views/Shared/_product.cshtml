@model Product
<div class="product-item">
    <div class="pi-pic">
        @if (Model.ProductPictures.Any())
        {
            <img src="@Model.ProductPictures.FirstOrDefault().Picture" alt="@Model.Name" />
        }
        else
        {
            <img src="/img/urunHazirlaniyor.png" alt="Ürün görseli hazırlanıyor" />
        }
        <div class="pi-links">
            <a asp-controller="product" asp-action="Detail" asp-route-name="@GeneralTool.URLConvert(Model.Name)" asp-route-id="@Model.ID" class="add-card"><i class="flaticon-bag"></i><span>ÜRÜN DETAYI</span></a>
            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
        </div>
    </div>
    <div class="pi-text">
        <h6>@Model.Price TL</h6>
        <p>@Model.Name</p>
    </div>
</div>
